{% extends 'base.html.twig' %}

{% block title %}Connexion | Elysium{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center background-cream px-4">
        <div class="w-full max-w-md bg-white/90 backdrop-blur rounded-2xl shadow-2xl p-8 border border-[#E0D4BF]">
            {% for message in app.flashes('success') %}
                <div class="mb-6 bg-emerald-50 border border-emerald-200 text-emerald-800 px-4 py-3 rounded-lg text-sm">
                    {{ message }}
                </div>
            {% endfor %}
            <!-- Logo / Titre -->
            <div class="text-center mb-8">
                <h1 class="text-3xl font-semibold tracking-wide text-[#0C325C]">
                    Elysium
                </h1>
                <p class="text-sm text-[#7A6B56] mt-2">
                    Accédez à vos expériences exclusives
                </p>
            </div>

            <!-- Erreur globale (fallback) -->
            {% if error %}
                <div class="mb-4 rounded-lg bg-[#FDF2F2] border border-[#FCA5A5] text-[#B91C1C] px-4 py-3 text-sm">
                    Identifiants ou mot de passe incorrects.<br>Veuillez réessayer.
                </div>
            {% endif %}

            {% if app.user %}
                <div class="mb-4 text-sm text-[#4B5563]">
                    Connecté en tant que <span class="font-medium text-[#0C325C]">{{ app.user.userIdentifier }}</span>,
                    <a href="{{ path('app_logout') }}" class="text-[#C59A3A] hover:underline">
                        Se déconnecter
                    </a>
                </div>
            {% endif %}

            {% set errorBorder = error ? 'border-[#FCA5A5]' : 'border-[#D1D5DB]' %}
            {% set errorText   = error ? 'text-[#B91C1C]' : 'text-[#4B5563]' %}

            <!-- Formulaire -->
            <form method="post" id="login-form" class="space-y-4">
                <div>
                    <label for="username" class="block text-sm font-medium text-[#4B5563] mb-1">
                        Email
                    </label>
                    <input
                        type="email"
                        name="_username"
                        id="username"
                        value="{{ last_username }}"
                        autocomplete="email"
                        required
                        class="w-full rounded-lg bg-white border {{ errorBorder }} px-4 py-2.5 text-[#111827] placeholder-[#9CA3AF] focus:outline-none focus:ring-2 focus:ring-[#C59A3A] focus:border-transparent transition"
                    >
                </div>

                <div>
                    <label for="password" class="block text-sm font-medium text-[#4B5563] mb-1">
                        Mot de passe
                    </label>
                    <input
                        type="password"
                        name="_password"
                        id="password"
                        autocomplete="current-password"
                        required
                        class="w-full rounded-lg bg-white border {{ errorBorder }} px-4 py-2.5 text-[#111827] placeholder-[#9CA3AF] focus:outline-none focus:ring-2 focus:ring-[#C59A3A] focus:border-transparent transition"
                    >
                </div>

                <input
                    type="hidden"
                    name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

                <!-- Bouton -->
                <button
                    type="submit"
                    id="login-submit"
                    class="w-full rounded-lg bg-[#0C325C] hover:bg-[#134072] text-white font-medium py-3 transition shadow-lg shadow-[#0C325C]/30 disabled:opacity-50 disabled:cursor-not-allowed flex items-center justify-center"
                    disabled
                >
                    <span class="login-submit-text">Se connecter</span>
                    <span class="login-spinner hidden ml-2 inline-block w-4 h-4 border-2 border-white border-t-transparent rounded-full animate-spin"></span>
                </button>
            </form>

            <!-- Footer -->
            <div class="mt-8 text-center text-xs text-[#9CA3AF]">
                © {{ "now"|date("Y") }} Elysium — Concerts & Spectacles
            </div>
        </div>
    </div>

    <script>
        (function () {
            const emailInput   = document.getElementById('username');
            const passInput    = document.getElementById('password');
            const submitButton = document.getElementById('login-submit');
            const form         = document.getElementById('login-form');
            const textSpan     = submitButton.querySelector('.login-submit-text');
            const spinnerSpan  = submitButton.querySelector('.login-spinner');

            function toggleButton() {
                const hasEmail = emailInput.value.trim().length > 0;
                const hasPass  = passInput.value.trim().length > 0;
                submitButton.disabled = !(hasEmail && hasPass);
            }

            emailInput.addEventListener('input', toggleButton);
            passInput.addEventListener('input', toggleButton);

            form.addEventListener('submit', function () {
                submitButton.disabled = true;
                textSpan.textContent = 'Connexion...';
                if (spinnerSpan) {
                    spinnerSpan.style.display = 'inline-block';
                }
            });

            // État initial : spinner caché + bouton désactivé
            if (spinnerSpan) {
                spinnerSpan.style.display = 'none';
            }
            toggleButton();
        })();
    </script>

{% endblock %}
