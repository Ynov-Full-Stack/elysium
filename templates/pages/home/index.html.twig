{% extends 'base.html.twig' %}

{% block title %}Elysium | Réservez l’exception{% endblock %}

{% block body %}
    <div class="min-h-screen bg-[#F5F1E8] flex flex-col">
        <section class="flex flex-col items-center justify-center text-center flex-grow px-6 py-24 bg-gradient-to-b from-[#0C325C]/90 to-[#F5F1E8] text-white relative overflow-hidden">
            {% for message in app.flashes('success') %}
                <div class="mb-6 bg-emerald-50 border border-emerald-200 text-emerald-800 px-4 py-3 rounded-lg text-sm z-20 relative">
                    {{ message }}
                </div>
            {% endfor %}
            <img src="{{ asset('img/concert-bg.png') }}"
                 class="absolute inset-0 w-full h-full object-cover object-center opacity-20"
                 alt="Concert">

            <div class="relative z-10 max-w-2xl">
                <h1 class="text-5xl md:text-6xl font-serif tracking-tight mb-6">
                    Réservez l'exception
                </h1>
                <p class="text-lg md:text-xl text-[#E8E3D7] mb-8">
                    Accédez à des expériences musicales et culturelles réservées aux amateurs d'exception.
                </p>
                <div class="flex flex-col sm:flex-row justify-center gap-4">
                    <a href="{{ path('app_event_index') }}"
                       class="bg-[#C59A3A] text-[#F5F1E8] px-8 py-3 rounded-lg font-medium hover:bg-[#D3AD55] transition">
                        Découvrir les spectacles
                    </a>
                    {% if not app.user %}
                    <a href="{{ path('app_register') }}"
                       class="border border-white text-white px-8 py-3 rounded-lg font-medium hover:bg-white hover:text-[#0C325C] transition">
                        Devenir membre
                    </a>
                    {% endif %}
                </div>
            </div>
        </section>

    </div>
{% endblock %}
