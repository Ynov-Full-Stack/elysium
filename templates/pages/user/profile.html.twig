{# templates/dashboard/profile.html.twig #}
{% extends 'pages/user/_layout.html.twig' %}

{% block title %}Mon Profil - Elysium{% endblock %}

{% block user_content %}
    <div class="space-y-8">
        <header>
            <h1 class="text-4xl lg:text-5xl font-black bg-gradient-to-r from-[#163260] to-[#1e4178] bg-clip-text text-transparent mb-2">
                Mon profil
            </h1>
            <p class="text-[#163260]/60 text-lg">Gérez vos informations personnelles</p>
        </header>

        <div class="bg-white/80 backdrop-blur-sm rounded-3xl p-8 shadow-xl border border-[#C29757]/20">
            {% if app.flashes('success') %}
                <div class="mb-6 p-4 bg-green-100 border border-green-200 text-green-700 rounded-xl">
                    {% for message in app.flashes('success') %}
                        {{ message }}
                    {% endfor %}
                </div>
            {% endif %}

            <form method="post" action="#" class="space-y-6">
                <div class="grid md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-semibold text-[#163260] mb-2">Prénom</label>
                        <input type="text"
                               name="prenom"
                               value="{{ app.user.firstname }}"
                               required
                               class="w-full px-4 py-3 border border-[#C29757]/30 rounded-xl focus:ring-2 focus:ring-[#C29757] focus:border-transparent transition-all">
                    </div>
                    <div>
                        <label class="block text-sm font-semibold text-[#163260] mb-2">Nom</label>
                        <input type="text"
                               name="nom"
                               value="{{ app.user.lastname }}"
                               required
                               class="w-full px-4 py-3 border border-[#C29757]/30 rounded-xl focus:ring-2 focus:ring-[#C29757] focus:border-transparent transition-all">
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-semibold text-[#163260] mb-2">Email</label>
                    <input type="email"
                           name="email"
                           value="{{ app.user.email }}"
                           required
                           class="w-full px-4 py-3 border border-[#C29757]/30 rounded-xl focus:ring-2 focus:ring-[#C29757] focus:border-transparent transition-all">
                </div>



                <button type="submit"
                        class="w-full bg-gradient-to-r from-[#163260] to-[#1e4178] hover:from-[#1e4178] hover:to-[#163260] text-white font-bold py-4 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
                    Enregistrer les modifications
                </button>
            </form>
        </div>

        <!-- Changement de mot de passe -->
        <div class="bg-white/80 backdrop-blur-sm rounded-3xl p-8 shadow-xl border border-[#C29757]/20">
            <h2 class="text-2xl font-black text-[#163260] mb-6">Changer mon mot de passe</h2>

            <form method="post" action="#" class="space-y-6">
                <div>
                    <label class="block text-sm font-semibold text-[#163260] mb-2">Mot de passe actuel</label>
                    <input type="password"
                           name="current_password"
                           required
                           class="w-full px-4 py-3 border border-[#C29757]/30 rounded-xl focus:ring-2 focus:ring-[#C29757] focus:border-transparent transition-all">
                </div>

                <div>
                    <label class="block text-sm font-semibold text-[#163260] mb-2">Nouveau mot de passe</label>
                    <input type="password"
                           name="new_password"
                           required
                           class="w-full px-4 py-3 border border-[#C29757]/30 rounded-xl focus:ring-2 focus:ring-[#C29757] focus:border-transparent transition-all">
                </div>

                <div>
                    <label class="block text-sm font-semibold text-[#163260] mb-2">Confirmer le mot de passe</label>
                    <input type="password"
                           name="confirm_password"
                           required
                           class="w-full px-4 py-3 border border-[#C29757]/30 rounded-xl focus:ring-2 focus:ring-[#C29757] focus:border-transparent transition-all">
                </div>

                <button type="submit"
                        class="w-full bg-gradient-to-r from-[#C29757] to-[#d4a562] hover:from-[#d4a562] hover:to-[#C29757] text-[#163260] font-bold py-4 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
                    Mettre à jour le mot de passe
                </button>
            </form>
        </div>
    </div>
{% endblock %}
