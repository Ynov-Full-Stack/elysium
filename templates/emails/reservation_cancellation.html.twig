{% extends 'emails/base.html.twig' %}

{% block title %}
Reservation Cancelled
{% endblock %}

{% block content %}
    <p>Hello {{ ctx.user.firstname }},</p>

    <p>
        This email confirms that your reservation on <strong>Elysium</strong> has been
        <strong>successfully cancelled</strong>.
    </p>

    <div style="margin: 30px 0; padding: 15px; background-color: #f9f9f9; border-left: 4px solid #b91c1c;">
        <p style="margin: 0 0 8px 0;">
            <strong>Event:</strong> {{ ctx.reservation.event.name }}
        </p>

        {% if ctx.reservation.event.eventDate %}
            <p style="margin: 0 0 8px 0;">
                <strong>Date:</strong>
                {{ ctx.reservation.event.eventDate|date('F j, Y \\a\\t H:i') }}
            </p>
        {% endif %}

        <p style="margin: 0 0 8px 0;">
            <strong>Seats cancelled:</strong> {{ ctx.reservation.seatQuantity }}
        </p>

        {% if ctx.reservation.event.price is not null %}
            <p style="margin: 0;">
                <strong>Price:</strong> {{ ctx.reservation.event.price }} â‚¬
            </p>
        {% endif %}
    </div>

    <p>
        The cancellation was processed on
        {{ "now"|date('F j, Y \\a\\t H:i') }}.
    </p>

    <p>
        If this cancellation was not requested by you or if you believe this is a mistake,
        please contact our support team immediately.
    </p>

    <p style="margin-top: 40px;">
        Kind regards,<br>
        <strong>The Elysium Team</strong>
    </p>
{% endblock %}
