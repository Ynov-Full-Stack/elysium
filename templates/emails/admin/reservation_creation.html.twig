{% extends 'emails/base.html.twig' %}

{% block title %}
New Reservation Created
{% endblock %}

{% block content %}
    <p>Hello Admin,</p>

    <p>
        A new reservation has just been made on <strong>Elysium</strong>.
    </p>

    <div style="margin: 30px 0; padding: 15px; background-color: #f9f9f9; border-left: 4px solid #b91c1c;">
        <p style="margin: 0 0 8px 0;">
            <strong>User:</strong>
            {{ ctx.reservation.user.firstname }} {{ ctx.reservation.user.lastname }}
            ({{ ctx.reservation.user.email }})
        </p>

        <p style="margin: 0 0 8px 0;">
            <strong>Event:</strong>
            {{ ctx.reservation.event.name }}
        </p>

        <p style="margin: 0 0 8px 0;">
            <strong>Event date:</strong>
            {{ ctx.reservation.event.eventDate|date('F j, Y \\a\\t H:i') }}
        </p>

        <p style="margin: 0 0 8px 0;">
            <strong>Seats reserved:</strong>
            {{ ctx.reservation.seatQuantity }}
        </p>

        <p style="margin: 0;">
            <strong>Reservation date:</strong>
            {{ ctx.reservation.createdAt|date('F j, Y \\a\\t H:i') }}
        </p>
    </div>

    <p>
        You can review this reservation and manage the event from the administration panel.
    </p>

    <p style="margin-top: 40px;">
        Regards,<br>
        <strong>The Elysium System</strong>
    </p>
{% endblock %}
