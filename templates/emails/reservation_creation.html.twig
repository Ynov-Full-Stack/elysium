{% extends 'emails/base.html.twig' %}

{% block title %}
Reservation Confirmed
{% endblock %}

{% block content %}
    {{ dump(ctx.user) }}
    <p>Hello {{ ctx.user.displayName }},</p>

    <p>
        Your reservation for the following event has been <strong>successfully confirmed</strong> on Elysium.
    </p>

    <div style="margin: 30px 0; padding: 15px; background-color: #f9f9f9; border-left: 4px solid #b91c1c;">
        <p style="margin: 0 0 8px 0;">
            <strong>Event:</strong> {{ ctx.reservation.event.name }}
        </p>

        {% if ctx.reservation.event.eventDate %}
            <p style="margin: 0 0 8px 0;">
                <strong>Date:</strong>
                {{ ctx.reservation.event.eventDate|date('F j, Y \\a\\t H:i') }}
            </p>
        {% endif %}

        <p style="margin: 0 0 8px 0;">
            <strong>Seats reserved:</strong> {{ ctx.reservation.seatQuantity }}
        </p>

        {% if ctx.reservation.event.price is not null %}
            <p style="margin: 0;">
                <strong>Price:</strong> {{ ctx.reservation.event.price }} â‚¬
            </p>
        {% endif %}
    </div>

    <p>
        This reservation was created on
        {{ ctx.reservation.createdAt|date('F j, Y \\a\\t H:i') }}.
    </p>

    <p>
        If you have any questions or need to make changes, please contact our support team.
    </p>

    <p style="margin-top: 40px;">
        Kind regards,<br>
        <strong>The Elysium Team</strong>
    </p>
{% endblock %}
