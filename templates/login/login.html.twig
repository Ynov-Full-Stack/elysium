{% extends 'base.html.twig' %}

{% block title %}Connexion | Elysium{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-[#F5F1E8] px-4">
        <div class="w-full max-w-md bg-white/90 backdrop-blur rounded-2xl shadow-2xl p-8 border border-[#E0D4BF]">

            <!-- Logo / Titre -->
            <div class="text-center mb-8">
                {# Si tu as un fichier logo, sinon laisse juste le titre #}
                {# <img src="{{ asset('images/logo-elysium.svg') }}" alt="Elysium" class="mx-auto mb-4 h-10"> #}

                <h1 class="text-3xl font-semibold tracking-wide text-[#0C325C]">
                    Elysium
                </h1>
                <p class="text-sm text-[#7A6B56] mt-2">
                    Accédez à vos expériences exclusives
                </p>
            </div>

            <!-- Erreur -->
            {% if error %}
                <div class="mb-4 rounded-lg bg-[#FDF2F2] border border-[#FCA5A5] text-[#B91C1C] px-4 py-3 text-sm">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {% if app.user %}
                <div class="mb-4 text-sm text-[#4B5563]">
                    Connecté en tant que <span class="font-medium text-[#0C325C]">{{ app.user.userIdentifier }}</span>,
                    <a href="{{ logout_path() }}" class="text-[#C59A3A] hover:underline">
                        Se déconnecter
                    </a>
                </div>
            {% endif %}

            <!-- Formulaire -->
            <form method="post" class="space-y-6">
                <div>
                    <label for="username" class="block text-sm font-medium text-[#4B5563] mb-1">
                        Email
                    </label>
                    <input
                        type="email"
                        name="_username"
                        id="username"
                        value="{{ last_username }}"
                        autocomplete="email"
                        required
                        autofocus
                        class="w-full rounded-lg bg-white border border-[#D1D5DB] px-4 py-2.5 text-[#111827] placeholder-[#9CA3AF] focus:outline-none focus:ring-2 focus:ring-[#C59A3A] focus:border-transparent transition"
                    >
                </div>

                <div>
                    <label for="password" class="block text-sm font-medium text-[#4B5563] mb-1">
                        Mot de passe
                    </label>
                    <input
                        type="password"
                        name="_password"
                        id="password"
                        autocomplete="current-password"
                        required
                        class="w-full rounded-lg bg:white border border-[#D1D5DB] px-4 py-2.5 text-[#111827] placeholder-[#9CA3AF] focus:outline-none focus:ring-2 focus:ring-[#C59A3A] focus:border-transparent transition"
                    >
                </div>

                <input
                    type="hidden"
                    name="_csrf_token"
                    data-controller="csrf-protection"
                    value="{{ csrf_token('authenticate') }}"
                >

                <!-- Bouton -->
                <button
                    type="submit"
                    class="w-full rounded-lg bg-[#0C325C] hover:bg-[#134072] text-white font-medium py-3 transition shadow-lg shadow-[#0C325C]/30"
                >
                    Se connecter
                </button>
            </form>

            <!-- Footer -->
            <div class="mt-8 text-center text-xs text-[#9CA3AF]">
                © {{ "now"|date("Y") }} Elysium — Concerts & Spectacles
            </div>
        </div>
    </div>
{% endblock %}
