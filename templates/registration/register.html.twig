{% extends 'base.html.twig' %}

{% block title %}Inscription | Elysium{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-[#F5F1E8] px-4">
        <div class="w-full max-w-md bg-white/90 backdrop-blur rounded-2xl shadow-2xl p-8 border border-[#E0D4BF]">

            <div class="text-center mb-8">
                <h1 class="text-3xl font-semibold tracking-wide text-[#0C325C]">
                    Rejoindre Elysium
                </h1>
                <p class="text-sm text-[#7A6B56] mt-2">
                    Créez votre compte pour réserver l’exception
                </p>
            </div>

            {{ form_start(registrationForm, {
                attr: { class: 'space-y-6' }
            }) }}

            {# Email #}
            {{ form_row(registrationForm.email, {
                row_attr: { class: 'space-y-1' },
                label_attr: { class: 'block text-sm font-medium text-[#4B5563]' },
                attr: {
                    class: 'w-full rounded-lg bg-white border border-[#D1D5DB] px-4 py-2.5 text-[#111827] placeholder-[#9CA3AF] focus:outline-none focus:ring-2 focus:ring-[#C59A3A] focus:border-transparent transition'
                }
            }) }}

            {# Mot de passe #}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe',
                row_attr: { class: 'space-y-1' },
                label_attr: { class: 'block text-sm font-medium text-[#4B5563]' },
                attr: {
                    class: 'w-full rounded-lg bg-white border border-[#D1D5DB] px-4 py-2.5 text-[#111827] placeholder-[#9CA3AF] focus:outline-none focus:ring-2 focus:ring-[#C59A3A] focus:border-transparent transition'
                }
            }) }}

            {# CGU #}
            {{ form_row(registrationForm.agreeTerms, {
                row_attr: { class: 'flex items-center gap-2 text-sm text-[#4B5563]' },
                label_attr: { class: 'text-sm text-[#4B5563]' },
                attr: {
                    class: 'h-4 w-4 rounded border-[#D1D5DB] text-[#0C325C] focus:ring-[#C59A3A]'
                }
            }) }}

            <button type="submit"
                    class="w-full rounded-lg bg-[#0C325C] hover:bg-[#134072] text-white font-medium py-3 mt-4 transition shadow-lg shadow-[#0C325C]/30">
                Créer mon compte
            </button>

            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
