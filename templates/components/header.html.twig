{# templates/partials/_header.html.twig #}
<header class="bg-white border-b border-gray-200">
    <nav class="mx-auto flex max-w-7xl items-center justify-between p-4 lg:px-8" aria-label="Global">
        {# Logo #}
        <div class="flex lg:flex-1">
            <a href="{{ path('app_home') }}" class="-m-1.5 p-1.5 flex items-center gap-2">
                {# Exemple logo texte, remplace par ton SVG/image #}
                <img src="{{ asset('img/generated-image.png') }}" alt="">
            </a>
        </div>

        {# Bouton mobile #}
        <div class="flex lg:hidden">
            <button type="button"
                    class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700"
                    x-data
                    @click="open = !open"
                    aria-label="Ouvrir le menu">
                <svg class="h-6 w-6" viewBox="0 0 24 24" fill="none"
                     stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M3.75 6.75h16.5M3.75 12h16.5M3.75 17.25h16.5" />
                </svg>
            </button>
        </div>

        {# Menu desktop #}
        <div class="hidden lg:flex lg:gap-x-8">
            <a href="#" class="text-sm font-medium text-gray-700 hover:text-gray-900">
                Accueil
            </a>
            <a href="#" class="text-sm font-medium text-gray-700 hover:text-gray-900">
                À propos
            </a>
            <a href="#" class="text-sm font-medium text-gray-700 hover:text-gray-900">
                Services
            </a>
            <a href="#" class="text-sm font-medium text-gray-700 hover:text-gray-900">
                Contact
            </a>
        </div>

        {# Bouton à droite (login / call-to-action) #}
        <div class="hidden lg:flex lg:flex-1 lg:justify-end">
            {% if app.user %}
                <a href="#"
                   class="text-sm font-semibold leading-6 text-indigo-600 hover:text-indigo-500">
                    Tableau de bord
                </a>
            {% else %}
                <a href="#"
                   class="text-sm font-semibold leading-6 text-indigo-600 hover:text-indigo-500">
                    Connexion
                </a>
            {% endif %}
        </div>
    </nav>

    {# Menu mobile (version Alpine.js très simple) #}
    <div x-data="{ open: false }" x-cloak class="lg:hidden">
        <div x-show="open" class="border-t border-gray-200 bg-white">
            <div class="space-y-1 px-4 py-4">
                <a href="#" class="block rounded-md px-3 py-2 text-base font-medium text-gray-700 hover:bg-gray-50">
                    Accueil
                </a>
                <a href="#" class="block rounded-md px-3 py-2 text-base font-medium text-gray-700 hover:bg-gray-50">
                    À propos
                </a>
                <a href="#" class="block rounded-md px-3 py-2 text-base font-medium text-gray-700 hover:bg-gray-50">
                    Services
                </a>
                <a href="#" class="block rounded-md px-3 py-2 text-base font-medium text-gray-700 hover:bg-gray-50">
                    Contact
                </a>

                <div class="border-t border-gray-100 pt-3 mt-3">
                    {% if app.user %}
                        <a href="#"
                           class="block rounded-md px-3 py-2 text-base font-semibold text-indigo-600 hover:bg-gray-50">
                            Tableau de bord
                        </a>
                    {% else %}
                        <a href="#"
                           class="block rounded-md px-3 py-2 text-base font-semibold text-indigo-600 hover:bg-gray-50">
                            Connexion
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</header>
