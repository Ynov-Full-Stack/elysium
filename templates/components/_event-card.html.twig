<article class="group bg-elysium-cream border border-elysium-navy/10 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 overflow-hidden max-w-sm mx-auto">
    {# Image avec overlay brand #}
    <div class="h-48 relative overflow-hidden bg-gradient-to-r from-elysium-navy via-elysium-navy/90 to-elysium-gold/80">
        <img src="https://images.unsplash.com/photo-{{ random(1000, 9999) }}?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80"
             alt="{{ event.nom }}"
             class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500">
        <span class="absolute top-4 left-4 bg-elysium-cream/95 backdrop-blur-sm px-3 py-1 rounded-full text-xs font-semibold text-elysium-navy shadow-md">
            {{ event.type|title }}
        </span>
    </div>

    {# Contenu #}
    <div class="p-6 bg-elysium-cream">
        <div class="flex items-center justify-between mb-3">
            <span class="bg-elysium-gold/20 text-elysium-gold px-3 py-1 rounded-lg text-xs font-semibold uppercase tracking-wide">
                {{ event.date|date('d MMM') }}
            </span>
            <span class="text-elysium-navy/70 text-sm font-medium">{{ event.lieu }}</span>
        </div>

        <h3 class="text-xl font-bold text-elysium-navy mb-3 leading-tight group-hover:text-elysium-gold transition-colors line-clamp-2">
            {{ event.nom }}
        </h3>

        <p class="text-elysium-navy/75 mb-6 text-sm leading-relaxed line-clamp-3">{{ event.description }}</p>

        <div class="flex items-center justify-between pt-4 border-t border-elysium-navy/10">
            <span class="text-2xl font-black text-elysium-gold drop-shadow-sm">{{ event.prix }}â‚¬</span>
            <a href="{{ path('app_event_show', { 'id': event.id }) }}"
               class="bg-gradient-to-r from-elysium-navy to-elysium-gold text-elysium-cream px-6 py-3 rounded-xl font-bold text-sm hover:from-elysium-gold hover:to-elysium-navy hover:shadow-2xl transition-all duration-300 shadow-lg transform hover:-translate-y-1 whitespace-nowrap">
                Participer
            </a>
        </div>
    </div>
</article>
